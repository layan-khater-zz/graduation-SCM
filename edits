<script>
  // Initialize Firebase
  var config = {
    apiKey: "AIzaSyCEWlTeYMiPNl75dyrVwlmN6tEDz0bfxCI",
    authDomain: "together-5add2.firebaseapp.com",
    databaseURL: "https://together-5add2.firebaseio.com",
    projectId: "together-5add2",
    storageBucket: "together-5add2.appspot.com",
    messagingSenderId: "190904373355"
  };
  firebase.initializeApp(config);
  var database=firebase.database().ref();


$(document).ready(function(){ 
    var projectKey=extractProjectKey();
  var diagramKey=extractDiagramKey();
  var d1=database.child("projects").child(projectKey).child(diagramKey).child("elements"); 
  var diagram =[];
    var diagramAdded=[];
    var canvas = $(".canvas");
    var tools = $(".tools"); 
    
          
            $(".tool").draggable({
                helper: "clone"
            });
            canvas.droppable({
                drop: function(event, ui) {
                      var node = {
                        _id: (new Date).getTime(),
                        position: ui.helper.position()
                    };
                    node.position.left -=canvas.position().left;
                    if(ui.helper.hasClass("arrow")){
                        node.type = "arrow";
                    } else if(ui.helper.hasClass("sequare")){
                        node.type = "sequare";
                    }else {
                        return;
                    }
                    diagram.push(node);
                    renderDiagram(diagram);
                }
            });
            ////////////////////////add dragged element////////////////////////
            function renderDiagram(diagram) {
                for(var d in diagram)
                {
                    var node = diagram[d];
                    var html = "";
                    if(node.type === "sequare") {
                        html = "<img class='tool sequared' src='layout/img/sequare.svg' style='width:100px;'>";
                    } else if(node.type === "arrow") {
                        html = "<img class='tool  arrowed' src='layout/img/arrow.png' style='width:100px;'>";
                    } 
                
                    var dom = $(html).css({
                        "position": "absolute",
                        "top": node.position.top,
                        "left": node.position.left,
                    }).draggable({
                        stop: function(event, ui) {
                            var id = ui.helper.attr("id");
                            for(var i in diagram) {
                                if(diagram[i]._id == id) {//////////////////////edit if dragged  elements moved and save edits in firebase/////////
                                    diagram[i].position.top = ui.position.top;
                                    diagram[i].position.left = ui.position.left;
                                    d1.once('value',function(snapshot) {
                                    snapshot.forEach(function(childSnapshot) {
                                    var childKey = childSnapshot.key;
                                    var childData = childSnapshot.child("id").val();
                                    if (diagram[d]._id == childData){
                                        d1.child(childKey).update({
                                            left:diagram[i].position.left,
                                            top:diagram[i].position.top
                                        }); 
                                    }

                                 });
                                });
                                }
                            }
                            },
                            helper:"original"


                  }).attr("id",node._id);
                /////////////////////edit if dragged  elements moved/////////
                    canvas.append(dom);
                   
    
                }
               addElement(diagram);
                    }
                    

                    function addElement(diagram){
                        var type=diagram[diagram.length-1].type;
                        var top=diagram[diagram.length-1].position.top;
                        var left=diagram[diagram.length-1].position.left;
                        var id=diagram[diagram.length-1]._id;
                    d1.push().set({
                        id:id,
                        type:type,
                        top:top,
                        left:left  
                    });
                     
                    }
             
/////////////////////////////////////end add element////////////////////////////////////////////
             ////////////////////////added elemnts listener from firebase/////////////////////////////// 
                     
             d1.on('child_added',snap =>{
                console.log(canvas);
                    var id=snap.val().id;
                    var type=snap.val().type;
                    var left=snap.val().left;
                    var top=snap.val().top;
                  

                    if(diagram[0] != null){
                    for(var d in diagram.length){
                    if(diagram[d]._id != id){
                        if (type =="sequare"){
                     html=$("<img class='tool sequared' src='layout/img/sequare.svg'>").css({
                        position: "absolute",
                        top:top,
                        left:left
                    }).draggable({
                        stop: function(event, ui) {
                            var id = ui.helper.attr("id");
                            for(var i in  diagramAdded) {////////////////////edit if dragged  elements moved and save edits in firebase///
                                if(diagramAdded[i].attr("id") == id) {
                                    diagramAdded[i].position.top = ui.position.top;
                                    diagramAdded[i].position.left = ui.position.left;
                                    d1.once('value',function(snapshot) {
                                    snapshot.forEach(function(childSnapshot) {
                                    var childKey = childSnapshot.key;
                                    var childData = childSnapshot.child("id").val();
                                    if ( diagramAdded[i].attr("id") == childData){
                                        d1.child(childKey).update({
                                            left:diagramAdded[i].position.left,
                                            top:diagramAdded[i].position.top
                                        }); 
                                    }

                                 });
                                });  
                            }
                        }
                    },
                        helper:"original"
                        
                    }).attr("id",id);
                    ////////////////end edit if dragged  elements moved and save edits in firebase///////////////
                    canvas.append(html);
                    diagramAdded.push(html);
                }
                }
                }
                    }else{ ////if diagram is null
                       if (type =="sequare"){
                     html=$("<img class='tool sequared' src='layout/img/sequare.svg'>").css({
                        position: "absolute",
                        top:top,
                        left:left
                    }).draggable({
                        stop: function(event, ui) {
                            var id = ui.helper.attr("id");
                            for(var i in  diagramAdded) {////////////////////edit if dragged  elements moved and save edits in firebase///
                                if(diagramAdded[i].attr("id") == id) {
                                    diagramAdded[i].position.top = ui.position.top;
                                    diagramAdded[i].position.left = ui.position.left;
                                    d1.once('value',function(snapshot) {
                                    snapshot.forEach(function(childSnapshot) {
                                    var childKey = childSnapshot.key;
                                    var childData = childSnapshot.child("id").val();
                                    if ( diagramAdded[i].attr("id") == childData){
                                        d1.child(childKey).update({
                                            left:diagramAdded[i].position.left,
                                            top:diagramAdded[i].position.top
                                        }); 
                                    }

                                 });
                                });  
                            }
                        }
                    },
                        helper:"original"
                        
                    }).attr("id",id);
                    ////////////////end edit if dragged  elements moved and save edits in firebase///////////////
                    canvas.append(html);
                    diagramAdded.push(html);
                }}
             
            });
             
 ////////////////////////end added elemnts listener from firebase///////////////////////////////  


 d1.on("child_removed",snap=>{
     var i=1;
     alert(i);
     i++;
     var id=snap.val().id;
     var element=document.getElementById(id);
     element.remove();

 });

